# Core Settings
ENV=development
DEBUG=true
PORT=8000
HOST=0.0.0.0
SECRET_KEY=your-secret-key-here
API_VERSION=v1
NODE_ENV=development
DEPLOYMENT_REGION=us-east-1
SERVICE_NAME=sales-intelligence-platform

# Database Settings
DATABASE_URL=postgresql://user:password@localhost:5432/sales_intelligence
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_SSL_MODE=require
DATABASE_STATEMENT_TIMEOUT=60000
DATABASE_QUERY_TIMEOUT=30000
DATABASE_IDLE_IN_TRANSACTION_SESSION_TIMEOUT=60000

# Redis Cache Settings
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100
REDIS_TIMEOUT=30
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_KEEPALIVE=true
REDIS_SOCKET_TIMEOUT=300
REDIS_CLUSTER_MODE=false
REDIS_KEY_PREFIX=sales_intelligence
REDIS_SSL=true
REDIS_SENTINEL_MASTER=mymaster

# Kafka Settings
KAFKA_BROKERS=localhost:9092
KAFKA_CONSUMER_GROUP=sales_intelligence_group
KAFKA_TOPIC_PREFIX=sales_intelligence
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_BATCH_SIZE=16384
KAFKA_COMPRESSION_TYPE=gzip
KAFKA_REQUEST_TIMEOUT_MS=30000
KAFKA_RETRY_BACKOFF_MS=500
KAFKA_MAX_IN_FLIGHT_REQUESTS_PER_CONNECTION=5

# Authentication Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=86400
JWT_REFRESH_EXPIRATION_DELTA=604800
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_SCOPES=read,write,profile
OAUTH_AUTHORIZATION_URL=https://auth.example.com/authorize
OAUTH_TOKEN_URL=https://auth.example.com/token

# AI Service Settings
MODEL_BASE_PATH=/app/models
MAX_BATCH_SIZE=32
INFERENCE_TIMEOUT=30
MODEL_DEVICE=cuda
MODEL_PARAMETERS_PATH=/app/config/model_parameters.json
MODEL_VERSION=1.0.0
MODEL_UPDATE_FREQUENCY=86400
MODEL_CACHE_SIZE=1024
MODEL_WARM_UP_ITERATIONS=100
MODEL_FALLBACK_CPU=true
MODEL_PRECISION=float32
MODEL_MAX_MEMORY=8192

# Integration Service Settings
LINKEDIN_API_KEY=your-linkedin-api-key
LINKEDIN_API_SECRET=your-linkedin-api-secret
LINKEDIN_API_VERSION=202401
LINKEDIN_API_RETRY_COUNT=3
GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id
GOOGLE_ADS_CLIENT_SECRET=your-google-ads-client-secret
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-developer-token
GOOGLE_ADS_API_VERSION=v15
GOOGLE_ADS_RETRY_COUNT=3
API_TIMEOUT=30000

# Monitoring Settings
PROMETHEUS_MULTIPROC_DIR=/tmp
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
LOGGING_FORMAT=json
TRACE_ID_HEADER=X-Trace-ID

# CORS Settings
CORS_ORIGINS=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*
CORS_CREDENTIALS=true
CORS_MAX_AGE=600
CORS_EXPOSE_HEADERS=X-Total-Count
CORS_ALLOW_PRIVATE_NETWORK=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_STRATEGY=fixed-window
RATE_LIMIT_STORAGE_URI=redis://localhost:6379/1
RATE_LIMIT_BY_IP=true
RATE_LIMIT_HEADERS=true
RATE_LIMIT_KEY_PREFIX=ratelimit
RATE_LIMIT_COST_FUNCTION=static