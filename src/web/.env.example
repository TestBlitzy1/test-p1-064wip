# API Configuration
# Base URL for backend API services
NEXT_PUBLIC_API_BASE_URL=https://api.example.com
# API version (v1)
NEXT_PUBLIC_API_VERSION=v1
# API request timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# Authentication Configuration
# Full URL of the application for NextAuth
NEXTAUTH_URL=https://app.example.com
# Secret key for NextAuth session encryption (min 32 chars)
NEXTAUTH_SECRET=your-secure-nextauth-secret-key-min-32-chars
# Enable/disable JWT key rotation
NEXTAUTH_JWT_ROTATION=true
# JWT secret for token encryption
JWT_SECRET=your-secure-jwt-secret-key
# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5
# Login attempt window in seconds (15 minutes)
LOGIN_ATTEMPT_WINDOW=900

# Auth0 Configuration
# Auth0 application client ID from Auth0 dashboard
AUTH0_CLIENT_ID=your-auth0-client-id
# Auth0 application client secret from Auth0 dashboard
AUTH0_CLIENT_SECRET=your-auth0-client-secret
# Auth0 issuer URL
AUTH0_ISSUER=https://your-tenant.auth0.com
# Auth0 API audience identifier
AUTH0_AUDIENCE=your-auth0-api-audience

# Platform Integration - LinkedIn Ads
# LinkedIn Ads API client ID
NEXT_PUBLIC_LINKEDIN_ADS_CLIENT_ID=your-linkedin-client-id
# LinkedIn Ads API client secret
LINKEDIN_ADS_CLIENT_SECRET=your-linkedin-client-secret
# LinkedIn Ads API scope
NEXT_PUBLIC_LINKEDIN_ADS_SCOPE=r_ads_reporting w_ads_management
# LinkedIn rate limit requests per minute
LINKEDIN_RATE_LIMIT_REQUESTS=100
# LinkedIn rate limit window in seconds
LINKEDIN_RATE_LIMIT_WINDOW=60

# Platform Integration - Google Ads
# Google Ads API client ID
NEXT_PUBLIC_GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id
# Google Ads API client secret
GOOGLE_ADS_CLIENT_SECRET=your-google-ads-client-secret
# Google Ads API scope
NEXT_PUBLIC_GOOGLE_ADS_SCOPE=https://www.googleapis.com/auth/adwords
# Google Ads rate limit requests per minute
GOOGLE_ADS_RATE_LIMIT_REQUESTS=150
# Google Ads rate limit window in seconds
GOOGLE_ADS_RATE_LIMIT_WINDOW=60

# Analytics and Monitoring
# Analytics service API key
NEXT_PUBLIC_ANALYTICS_KEY=your-analytics-api-key
# Application monitoring endpoint
NEXT_PUBLIC_MONITORING_ENDPOINT=https://monitoring.example.com
# Enable debug mode in development
DEBUG=false
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Security Configuration
# CORS allowed origins
CORS_ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com
# Content Security Policy
CSP_DIRECTIVES="default-src 'self'; script-src 'self'"
# Enable strict transport security
STRICT_TRANSPORT_SECURITY=true
# Enable XSS protection
XSS_PROTECTION=true

# Performance Configuration
# Cache duration in seconds
CACHE_DURATION=3600
# Maximum cache size in MB
CACHE_MAX_SIZE=100
# Enable response compression
COMPRESSION_ENABLED=true

# Feature Flags
# Enable AI campaign optimization
NEXT_PUBLIC_FEATURE_AI_OPTIMIZATION=true
# Enable advanced analytics
NEXT_PUBLIC_FEATURE_ADVANCED_ANALYTICS=true
# Enable A/B testing
NEXT_PUBLIC_FEATURE_AB_TESTING=true

# Development Configuration
# Node environment (development, staging, production)
NODE_ENV=development
# Enable source maps
SOURCE_MAPS=true
# API mocking in development
ENABLE_API_MOCKING=false