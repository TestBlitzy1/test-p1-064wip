{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es2021", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@test/*": ["./*"],
      "@mocks/*": ["./mocks/*"], 
      "@utils/*": ["./utils/*"],
      "@config/*": ["./config/*"],
      "@fixtures/*": ["./fixtures/*"],
      "@types/*": ["./types/*"]
    },
    "types": [
      "jest",
      "node"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist", 
    "coverage",
    ".next",
    "build"
  ]
}